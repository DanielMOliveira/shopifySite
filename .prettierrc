{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "plugins": [
        "@shopify/prettier-plugin-liquid"
    ],
    "overrides": [
        {
            "files": "*.liquid",
            "options": {
                "parser": "liquid-html"
            }
        }
    ]
}
