{%
  render 'offset',
  id: section.id,
  padding_top_mobile: section.settings.padding_top_mobile | default: 0,
  padding_bottom_mobile: section.settings.padding_bottom_mobile | default: 0,
  padding_top_desktop: section.settings.padding_top_desktop | default: 0,
  padding_bottom_desktop: section.settings.padding_bottom_desktop | default: 0
%}

{% liquid
  assign page_heading = section.settings.page_heading
  assign page_sub_heading = section.settings.page_sub_heading
  assign links = section.blocks | where: 'type', 'links'
%}

<section id="section-{{ section.id }}" class="overflow-hidden">
  <div class="template-404 container-valantic center flex flex-col items-center justify-center py-10">
    <h1 class="title mb-10 text-2xl">
      <span class="block">{{ page_heading }}</span>
      <span class="block">{{ page_sub_heading }}</span>
    </h1>
    <div class="404-links grid w-full max-w-3xl grid-cols-1 gap-5 md:grid-cols-3">
      {% for link in links %}
        {% for i in (1..6) %}
          {% assign link_url = 'link_url_' | append: i %}
          {% assign link_text = 'link_label_' | append: i %}

          {% if link.settings[link_url] != blank %}
            <a href="{{ link.settings[link_url] }}" class="button flex font-normal">
              {{ link.settings[link_text] }}
            </a>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</section>

