      --color-gray-200: {{ settings.gray_200.red }} {{ settings.gray_200.green }} {{ settings.gray_200.blue }};
      --color-gray-300: {{ settings.gray_300.red }} {{ settings.gray_300.green }} {{ settings.gray_300.blue }};
      --color-gray-400: {{ settings.gray_400.red }} {{ settings.gray_400.green }} {{ settings.gray_400.blue }};
      --color-gray-500: {{ settings.gray_500.red }} {{ settings.gray_500.green }} {{ settings.gray_500.blue }};
      --color-gray-600: {{ settings.gray_600.red }} {{ settings.gray_600.green }} {{ settings.gray_600.blue }};
      --color-gray-700: {{ settings.gray_700.red }} {{ settings.gray_700.green }} {{ settings.gray_700.blue }};
      --color-gray-800: {{ settings.gray_800.red }} {{ settings.gray_800.green }} {{ settings.gray_800.blue }};
      --color-gray-900: {{ settings.gray_900.red }} {{ settings.gray_900.green }} {{ settings.gray_900.blue }};

