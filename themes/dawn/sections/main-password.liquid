<section id="section-{{ section.id }}">
  <div class="container-valantic">
    <div class="bg-beige-25 mx-auto my-15 max-w-[500px] rounded border border-dashed border-primary p-6">
      {% form 'storefront_password', class: 'password-form' %}
        <div class="input-group{% if form.errors %} error {% endif %}">
          <input
            class="peer w-full"
            type="password"
            name="password"
            id="Password"
            required
            autocomplete="current-password"
            placeholder=" "
          >
          <label>{{ 'general.password_page.login_form_password_label' | t }}</label>
          {% if form.errors %}
            {% render 'icon', icon: 'error-circle', class: 'absolute top-1/2 -translate-y-1/2 right-4' %}
          {% endif %}
        </div>
        {% if form.errors %}
          <div class="mt-0.5 flex items-center gap-1 text-2xs text-red-500">
            {% render 'icon', icon: 'error-circle', class: '!h-4 !w-4' %}
            <span>{{ 'general.password_page.login_form_error' | t }}</span>
          </div>
        {% endif %}

        <button class="button mt-5 w-full" name="commit" title="Enter">Enter</button>
      {% endform %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main Password",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "Main Password"
    }
  ]
}
{% endschema %}
