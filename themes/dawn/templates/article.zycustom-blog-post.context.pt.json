      "settings": {
        "custom_liquid": "<style>\n  .breadcrumbs {\n      display: none;\n  }\n\n  #zypost {\n      overflow: hidden;\n      padding: 0 2rem;\n  }\n\n  #zypost h1 {\n      font-size: 2rem;\n      margin-top: 2rem;\n      margin-bottom: 1rem;\n  }\n\n  #zypost h2 {\n      font-size: 1.6rem;\n      margin-top: 2rem;\n      margin-bottom: 1rem;\n  }\n\n  #zypost p,\n  #zypost div {\n      font-size: 1rem;\n      line-height: 1.6;\n      margin-bottom: 2rem;\n  }\n\n  #zypost .image-row {\n      display: flex;\n      flex-wrap: wrap;\n      gap: 1rem;\n      margin-bottom: 2rem;\n  }\n\n  #zypost .image-row img {\n      width: calc(50% - 0.5rem);\n      height: auto;\n      object-fit: cover;\n      margin: auto;\n  }\n\n  #zypost img {\n      max-width: 100%;\n      height: auto;\n      margin: auto;\n  }\n\n  /* Estilos para o template text_gallery */\n  #zypost .gallery-grid {\n      display: grid;\n      grid-template-columns: repeat(3, 1fr);\n      gap: 1rem;\n      margin-bottom: 2rem;\n  }\n\n  #zypost .gallery-item {\n      display: flex;\n      flex-direction: column;\n  }\n\n  #zypost .gallery-item img {\n      width: 100%;\n      height: 500px;\n      object-fit: cover;\n      margin-bottom: 0.5rem;\n  }\n\n  #zypost .gallery-item h3 {\n      font-size: 1.2rem;\n      margin: 0.5rem 0;\n  }\n\n  #zypost .gallery-item p {\n      font-size: 0.9rem;\n      margin: 0;\n  }\n\n  @media (max-width: 768px) {\n      #zypost .image-row img {\n          width: 100%;\n      }\n\n      #zypost .gallery-grid {\n          grid-template-columns: repeat(2, 1fr);\n      }\n  }\n\n  @media (max-width: 480px) {\n      #zypost .gallery-grid {\n          grid-template-columns: 1fr;\n      }\n  }\n</style>\n\n<div id=\"zypost\">\n  <h1>{{ article.title }}</h1>\n  <p>{{ article.published_at | date: \"%d de %B de %Y\" }}</p>\n\n  {% assign post_type = article.metafields.custom.post_template_type | strip | replace: '[', '' | replace: ']', '' | replace: '\"', '' %}\n\n  <!-- post type: image_blocks -->\n  {% if post_type contains \"image_blocks\" %}\n  {% if article.metafields.custom.title_1 != blank %}\n  <h2>{{ article.metafields.custom.title_1 }}</h2>\n  {% endif %}\n\n  {% if article.metafields.custom.text_block_1 != blank %}\n  <div>{{ article.metafields.custom.text_block_1 | newline_to_br }}</div>\n  {% endif %}\n\n  {% if article.metafields.custom.image_1 != blank or article.metafields.custom.image_2 != blank %}\n  <div class=\"image-row\">\n      {% if article.metafields.custom.image_1 != blank %}\n      {% assign alt_text_1 = article.metafields.custom.image_1.alt | default: article.metafields.custom.title_1 | default: article.title %}\n      <img src=\"{{ article.metafields.custom.image_1 | file_url }}\" alt=\"{{ alt_text_1 }}\">\n      {% endif %}\n\n      {% if article.metafields.custom.image_2 != blank %}\n      {% assign alt_text_2 = article.metafields.custom.image_2.alt | default: article.metafields.custom.title_2 | default: article.title %}\n      <img src=\"{{ article.metafields.custom.image_2 | file_url }}\" alt=\"{{ alt_text_2 }}\">\n      {% endif %}\n  </div>\n  {% endif %}\n\n  {% if article.metafields.custom.title_2 != blank %}\n  <h2>{{ article.metafields.custom.title_2 }}</h2>\n  {% endif %}\n\n  {% if article.metafields.custom.text_block_2 != blank %}\n  <div>{{ article.metafields.custom.text_block_2 | newline_to_br }}</div>\n  {% endif %}\n\n  {% if article.metafields.custom.image_3 != blank %}\n  {% assign alt_text_3 = article.metafields.custom.image_3.alt | default: article.metafields.custom.title_3 | default: article.title %}\n  <img src=\"{{ article.metafields.custom.image_3 | file_url }}\" alt=\"{{ alt_text_3 }}\">\n  {% endif %}\n\n  {% if article.metafields.custom.title_3 != blank %}\n  <h2>{{ article.metafields.custom.title_3 }}</h2>\n  {% endif %}\n\n  {% if article.metafields.custom.text_block_3 != blank %}\n  <div>{{ article.metafields.custom.text_block_3 | newline_to_br }}</div>\n  {% endif %}\n\n\n<!-- post type: gallery -->\n  {% elsif post_type contains \"gallery\" %}\n  {% if article.metafields.custom.gallery_text_1 != blank %}\n  <div class=\"intro-text\">\n      {{ article.metafields.custom.gallery_text_1 | newline_to_br }}\n  </div>\n  {% endif %}\n\n  <div class=\"gallery-grid\">\n      {% for i in (1..6) %}\n      {% capture gallery_image_key %}gallery_image_{{ i }}{% endcapture %}\n      {% assign gallery_image = article.metafields.custom[gallery_image_key] %}\n\n      {% if gallery_image != blank %}\n      <div class=\"gallery-item\">\n          {% assign alt_text = gallery_image.alt | default: gallery_title | default: article.title %}\n          <img src=\"{{ gallery_image | file_url }}\" alt=\"{{ alt_text }}\">\n      </div>\n      {% endif %}\n      {% endfor %}\n  </div>\n\n  {% if article.metafields.custom.gallery_text_3 != blank %}\n  <div class=\"conclusion-text\">\n      {{ article.metafields.custom.gallery_text_3 | newline_to_br }}\n  </div>\n  {% endif %}\n\n  {% else %}\n\n  <div>{{ article.content }}</div>\n  {% endif %}\n</div>",
