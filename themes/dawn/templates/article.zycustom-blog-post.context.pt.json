        "custom_liquid": "<style>\n #zyBlog .blog-tags-nav {\n        display: flex;\n        flex-wrap: wrap;\n        gap: 0.5rem;\n        margin: 1rem 2rem 2rem;\n        padding: 0.5rem 0;\n        justify-content: center;\n    }\n\n    #zyBlog .tag-link {\n        font-family: \"CentraNo1\", Assistant, sans-serif;\n        font-size: 0.875rem;\n        color: #221f20;\n        font-weight: 500;\n        text-decoration: none;\n        text-transform: uppercase;\n        padding: 0.4rem 0.8rem;\n        white-space: nowrap;\n        width: auto;\n    }\n\n    #zyBlog .tag-link:hover,\n    #zyBlog .tag-link.active {\n        text-decoration: underline;\n        text-underline-offset: 0.2rem;\n    }\n</style>\n<div id=\"zyBlog\">\n    <div class=\"blog-tags-nav\">\n        <a href=\"{{ blog.url }}\" class=\"tag-link{% unless current_tags %} active{% endunless %}\">ver tudo</a>\n\n        {% assign custom_order = \"Jornada Criativa,Agenda,Atividades,Collabs,Giveaways\" | split: ',' %}\n        {% assign remaining_tags = blog.all_tags | minus: custom_order %}\n\n        {% for tag in custom_order %}\n        {% if blog.all_tags contains tag %}\n        <a href=\"{{ blog.url }}/tagged/{{ tag | handle }}\"\n            class=\"tag-link{% if current_tags contains tag %} active{% endif %}\">\n            {{ tag }}\n        </a>\n        {% endif %}\n        {% endfor %}\n    </div>\n</div>",
