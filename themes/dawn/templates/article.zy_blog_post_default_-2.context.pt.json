obile .sidebar-tags-list {\n            text-align: left;\n        }\n\n\n        #zyAllPosts .sidebar-horizontal-group-mobile .share-header-container {\n            justify-content: center;\n        }\n\n        #zyAllPosts .sidebar-tags-list__item {\n            margin-bottom: 0;\n        }\n\n        #zyAllPosts .blog-post-container {\n            flex-direction: column;\n            width: 90%;\n            padding: 2rem 0;\n            gap: 2rem;\n        }\n\n        #zyAllPosts .post-sidebar,\n        #zyAllPosts .post-content-main {\n            width: 100%;\n            position: static;\n            height: auto;\n            overflow-y: visible;\n        }\n\n        #zyAllPosts .intro-text {\n            width: 100%;\n            max-width: none;\n            padding-top: 1rem;\n        }\n\n        #zyAllPosts .sidebar-title {\n            margin-bottom: 0;\n        }\n\n    }\n</style>\n\n<div id=\"zyPostBanner\">\n    {%- assign banner_desktop = article.metafields.custom.main_banner_desktop -%}\n    {%- assign banner_mobile = article.metafields.custom.main_banner_mobile -%}\n    {%- if banner_desktop.value != blank or banner_mobile.value != blank -%}\n    <div class=\"main-banner-container\" data-section-type=\"main-banner\">\n        {%- if banner_desktop.value != blank -%}\n        <img src=\"{{ banner_desktop.value | image_url: width: 1920 }}\"\n            srcset=\"{{ banner_desktop.value | image_url: width: 3840 }} 2x\"\n            alt=\"{{ banner_desktop.value.alt | escape | default: article.title | append: ' banner' }}\"\n            width=\"{{ banner_desktop.value.width }}\" height=\"{{ banner_desktop.value.height }}\"\n            class=\"main-banner main-banner--desktop\" loading=\"eager\">\n        {%- endif -%}\n        {%- if banner_mobile.value != blank -%}\n        <img src=\"{{ banner_mobile.value | image_url: width: 750 }}\"\n            srcset=\"{{ banner_mobile.value | image_url: width: 1500 }} 2x\"\n            alt=\"{{ banner_mobile.value.alt | escape | default: article.title | append: ' banner mobile' }}\"\n            width=\"{{ banner_mobile.value.width }}\" height=\"{{ banner_mobile.value.height }}\"\n            class=\"main-banner main-banner--mobile\" loading=\"eager\">\n        {%- endif -%}\n    </div>\n    {%- endif -%}\n</div>\n\n\n<div id=\"zyAllPosts\">\n    <div class=\"blog-post-container\">\n\n        <aside class=\"post-sidebar\">\n            <div class=\"sidebar-section sidebar-backlink\">\n                <a href=\"{{ blog.url }}\" class=\"sidebar-backlink__link\" title=\"Voltar ao blog\">\n                    {% render 'icon', icon: 'arrow-left', class: '!h-5 !w-5' %}\n                    Voltar ao inÃ­cio\n                </a>\n            </div>\n\n\n            <div class=\"sidebar-horizontal-group-mobile\">\n\n                <div class=\"sidebar-section sidebar-date\">\n                    <h4 class=\"sidebar-title\">Data</h4>\n                    <time datetime=\"{{ article.published_at | date: '%Y-%m-%d' }}\" class=\"sidebar-date__text\">\n                        {{ article.published_at | date: '%d %B %Y' | upcase | replace: 'JANUARY', 'JANEIRO' | replace: 'FEBRUARY', 'FEVEREIRO' | replace: 'MARCH', 'MARÃ‡O' | replace: 'APRIL', 'ABRIL' | replace: 'MAY', 'MAIO' | replace: 'JUNE', 'JUNHO' | replace: 'JULY', 'JULHO' | replace: 'AUGUST', 'AGOSTO' | replace: 'SEPTEMBER', 'SETEMBRO' | replace: 'OCTOBER', 'OUTUBRO' | replace: 'NOVEMBER', 'NOVEMBRO' | replace: 'DECEMBER', 'DEZEMBRO' }}\n                    </time>\n                </div>\n\n                {%- if article.tags.size > 0 -%}\n                <div class=\"sidebar-section sidebar-tags\">\n                    <h4 class=\"sidebar-title\">TÃ³picos</h4>\n                    <ul class=\"sidebar-tags-list\">\n                        {%- for tag in article.tags limit: 5 -%}\n                        {% assign tag_handle = tag | handleize %}\n                        <li class=\"sidebar-tags-list__item\">\n                            <a href=\"{{ blog.url }}/tagged/{{ tag_handle }}\" class=\"sidebar-tags-list__link\">\n                                {{ tag }}\n                            </a>\n                        </li>\n                        {%- endfor -%}\n                    </ul>\n                </div>\n                {%- endif -%}\n\n                <div class=\"sidebar-section sidebar-share\">\n                    <div class=\"share-header-container\">\n                        <h4 class=\"sidebar-title share-header__title\">Partilhar</h4>\n                        {%- assign share_url = shop.url | append: article.url -%}\n                        {%- assign share_title = article.title -%}\n                        <div id=\"dynamic-share-button\" class=\"share-icon-button\" role=\"button\" tabindex=\"0\"\n                            data-share-url=\"{{ share_url | escape }}\" data-share-title=\"{{ share_title | escape }}\"\n                            data-share-text=\"{{ 'Vi este artigo no blog da Zippy:' | escape }} {{ share_title | escape }}\"\n                            aria-label=\"Partilhar este artigo ou copiar link\"\n                            title=\"Partilhar este artigo ou copiar link\">\n                            {% render 'icon', icon: 'share', class: '!h-5 !w-5' %}\n                        </div>\n                    </div>\n                    <span id=\"share-feedback-message\" class=\"share-feedback\" aria-live=\"polite\"></span>\n                </div>\n\n            </div>\n        </aside>\n\n        <main class=\"post-content-main\">\n            {%- if article.content != blank -%}\n            <div class=\"intro-text\">\n                {{ article.content }}\n            </div>\n            {%- endif -%}\n        </main>\n\n    </div>\n</div>\n\n<script>\n  document.addEventListener('DOMContentLoaded', function() {\n    const shareButton = document.getElementById('dynamic-share-button');\n    const shareFeedback = document.getElementById('share-feedback-message');\n  \n    if (shareButton) {\n      shareButton.addEventListener('click', async () => {\n        const shareUrl = shareButton.dataset.shareUrl;\n        const shareTitle = shareButton.dataset.shareTitle;\n        const shareTextBase = 'Saiba tudo sobre \"';\n        const shareText = `${shareTextBase}${shareTitle}\" na Magazine da Zippy.`;\n  \n        if (navigator.share) {\n          try {\n            await navigator.share({\n              title: shareTitle,\n              text: shareText,\n              url: shareUrl,\n            });\n            shareFeedback.textContent = 'ConteÃºdo partilhado com sucesso!';\n          } catch (error) {\n            if (error.name !== 'AbortError') {\n              shareFeedback.textContent = 'Ocorreu um erro ao partilhar.';\n              console.error('Erro ao partilhar:', error);\n            } else {\n              shareFeedback.textContent = ''; \n            }\n          }\n        } else {\n        \n          try {\n            await navigator.clipboard.writeText(shareUrl);\n            shareFeedback.textContent = 'Link do artigo copiado para a Ã¡rea de transferÃªncia!';\n          } catch (err) {\n            shareFeedback.textContent = 'NÃ£o foi possÃ­vel copiar o link.';\n            console.error('Erro ao copiar texto:', err);\n          }\n        }\n      });\n  \n      shareButton.addEventListener('keydown', async (event) => {\n        if (event.key === 'Enter' || event.key === ' ') {\n          event.preventDefault(); \n          shareButton.click(); \n        }\n      });\n    }\n  });\n  </script>",
