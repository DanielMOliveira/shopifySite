        "custom_liquid": "{% assign bg_color = article.metafields.custom.background_color | default: '' %}\n{% assign text_color = article.metafields.custom.font_color | default: '' %}\n\n<style>\n  {\n    % if bg_color !=''%\n  }\n\n  #zyRelatedPosts,\n  #zyborder {\n    background-color: {{ bg_color }};\n\n      { % endif % }\n\n      { % if text_color !=''% }\n  }\n\n  #zyRelatedPosts {\n    color: {{ text_color }};\n\n      { % endif % }\n  }\n\n  #zyborder .border {\n    border-top: solid 1.25px {{ text_color }};\n    width: 90%;\n    display: block;\n    padding-left: 5%;\n    margin: auto;\n  }\n\n  #zyRelatedPosts {\n    overflow: hidden;\n    position: relative;\n    margin-top: 3rem;\n    margin-bottom: 3rem;\n    width: 100%;\n    margin: auto;\n    padding-top: 2rem;\n  }\n\n  #zyRelatedPosts .related-posts-wrapper h3 {\n    font-size: 0.75rem;\n    letter-spacing: 0.038rem;\n    text-transform: uppercase;\n    width: 90%;\n    margin: 1rem auto;\n  }\n\n  #zyRelatedPosts .carousel-container {\n    display: flex;\n    overflow-x: auto;\n    scroll-snap-type: x mandatory;\n    gap: 1rem;\n     padding-left: 5%; \n    padding-right: 5%;\n    scroll-padding-left: 5%;\n    -webkit-overflow-scrolling: touch;\n    scrollbar-width: none;\n    margin-bottom: 5rem;\n}\n\n  #zyRelatedPosts .carousel-container::-webkit-scrollbar {\n    display: none;\n  }\n\n  #zyRelatedPosts .carousel-item {\n    flex: 0 0 300px;\n    scroll-snap-align: start;\n    overflow: hidden;\n    text-align: left;\n    padding-top: 1rem;\n    width: 100%;\n    height: auto;\n  }\n\n\n  #zyRelatedPosts .carousel-item a {\n    text-decoration: none;\n    color: inherit;\n    overflow: hidden;\n  }\n\n\n  #zyRelatedPosts .carousel-item .image-wrapper {\n    overflow: hidden;\n    width: 100%;\n    height: auto;\n  }\n\n  #zyRelatedPosts .carousel-item img {\n    width: 100%;\n    height: auto;\n    object-fit: cover;\n    transition: transform 0.3s ease-in-out;\n  }\n\n  #zyRelatedPosts .carousel-item img:hover {\n    transform: scale(1.02);\n  }\n\n  #zyRelatedPosts .carousel-item h3 {\n    font-size: 0.875rem;\n    letter-spacing: 0.018rem;\n    margin: 0.5rem 0;\n    font-weight: 500;\n    text-transform: none;\n    line-height: 1.3;\n  }\n\n  .carousel-button {\n    position: absolute;\n    top: 45px;\n    transform: translateY(0%);\n    border: 1px solid #ccc;\n    border-radius: 50%;\n    padding: 0.5rem;\n    cursor: pointer;\n    z-index: 1;\n    width: 32px;\n    height: 32px;\n  }\n\n  .carousel-button svg {\n    width: 100%;\n    height: 100%;\n    color: {{ text_color }};\n  }\n\n  .carousel-button.left {\n    right: 100px;\n  }\n\n  .carousel-button.right {\n    right: 60px;\n  }\n\n  #zyRelatedPosts .carousel-item:first-child {\n    margin-left: 5%;\n}\n#zyRelatedPosts .carousel-item:last-child {\n    margin-right: 5%;\n}\n  /* #zyRelatedPosts .carousel-item {\n        padding-left: 1rem;\n    } */\n\n\n  @media (max-width: 768px) {\n    .carousel-button {\n      display: none;\n    }\n\n    #zyRelatedPosts {\n      padding-top: 1rem;\n    }\n\n    #zyRelatedPosts .carousel-item:first-child {\n      margin-left: 5%;\n    }\n\n    #zyRelatedPosts .carousel-item {\n    flex: 0 0 250px;\n  }\n\n  }\n</style>\n\n<div id=\"zyborder\">\n  <div class=\"border\"></div>\n</div>\n<div id=\"zyRelatedPosts\">\n  <div class=\"related-posts-wrapper\">\n    {% assign has_related = false %}\n    {% assign related_limit = 6 %}\n    {% assign related_count = 0 %}\n\n    <h3>artigos relacionados</h3>\n\n    <div class=\"carousel-button left\" onclick=\"scrollCarousel(-1)\">\n      <svg class=\"icon chevron-left\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 16 16\" fill=\"none\">\n        <path fill-rule=\"evenodd\" clip-rule=\"evenodd\"\n          d=\"M5.52852 8.47148C5.26819 8.21115 5.26819 7.78902 5.52852 7.52868L9.29975 3.75744C9.56007 3.49711 9.98218 3.49711 10.2425 3.75744C10.5029 4.01778 10.5029 4.4399 10.2425 4.70024L6.94269 8.00008L10.2425 11.2999C10.5029 11.5603 10.5029 11.9824 10.2425 12.2427C9.98218 12.5031 9.56007 12.5031 9.29975 12.2427L5.52852 8.47148Z\"\n          fill=\"currentColor\" />\n      </svg>\n    </div>\n\n    <div class=\"carousel-button right\" onclick=\"scrollCarousel(1)\">\n      <svg class=\"icon chevron-right\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 16 16\" fill=\"none\">\n        <path fill-rule=\"evenodd\" clip-rule=\"evenodd\"\n          d=\"M10.4713 7.52852C10.7317 7.78885 10.7317 8.21098 10.4713 8.47132L6.70005 12.2426C6.43973 12.5029 6.01763 12.5029 5.75727 12.2426C5.49693 11.9822 5.49693 11.5601 5.75727 11.2997L9.05712 7.99992L5.75727 4.70008C5.49693 4.43974 5.49693 4.01762 5.75727 3.75728C6.01763 3.49692 6.43973 3.49692 6.70005 3.75728L10.4713 7.52852Z\"\n          fill=\"currentColor\" />\n      </svg>\n    </div>\n\n    <div class=\"carousel-container\" id=\"carouselContainer\">\n      {% if article.tags.size > 0 %}\n      {% assign primary_tag = article.tags.first %}\n\n      {% for related in blog.articles limit: 20 %}\n      {% if related.id != article.id and related.tags contains primary_tag and related_count < related_limit %}\n      {% assign has_related = true %}\n      {% assign related_count = related_count | plus: 1 %}\n\n      <div class=\"carousel-item\">\n        <a href=\"{{ related.url }}\">\n          {% if related.image %}\n  <div class=\"image-wrapper\">\n    <img src=\"{{ related.image | img_url: '400x' }}\" alt=\"{{ related.title }}\">\n  </div>\n{% else %}\n  <div style=\"width:100%;height:200px;background-color:#f0f0f0;\"></div>\n{% endif %}\n          <h3>{{ related.title }}</h3>\n        </a>\n      </div>\n      {% endif %}\n      {% endfor %}\n\n      {% if related_count < related_limit and article.tags.size > 1 %}\n      {% for tag in article.tags offset:1 %}\n      {% if related_count < related_limit %}\n      {% for related in blog.articles limit: 20 %}\n      {% if related.id != article.id and related.tags contains tag and related_count < related_limit %}\n      {% assign duplicate = false %}\n\n      {% for existing_tag in related.tags %}\n      {% if existing_tag == primary_tag %}\n      {% assign duplicate = true %}\n      {% endif %}\n      {% endfor %}\n\n      {% unless duplicate %}\n      {% assign has_related = true %}\n      {% assign related_count = related_count | plus: 1 %}\n\n      <div class=\"carousel-item\">\n        <a href=\"{{ related.url }}\">\n          {% if related.image %}\n          <div class=\"image-wrapper\">\n            <img src=\"{{ related.image | img_url: '400x' }}\" alt=\"{{ related.title }}\">\n          </div>\n        {% else %}\n          <div style=\"width:100%;height:200px;background-color:#f0f0f0;\"></div>\n        {% endif %}\n          <h3>{{ related.title }}</h3>\n        </a>\n      </div>\n      {% endunless %}\n      {% endif %}\n      {% endfor %}\n      {% endif %}\n      {% endfor %}\n      {% endif %}\n      {% endif %}\n\n      {% if related_count == 0 %}\n      {% for related in blog.articles limit: related_limit %}\n      {% if related.id != article.id %}\n      {% assign has_related = true %}\n\n      <div class=\"carousel-item\">\n        <a href=\"{{ related.url }}\">\n          {% if related.image %}\n          <div class=\"image-wrapper\">\n            <img src=\"{{ related.image | img_url: '400x' }}\" alt=\"{{ related.title }}\">\n          </div>\n        {% else %}\n          <div style=\"width:100%;height:200px;background-color:#f0f0f0;\"></div>\n        {% endif %}\n          <h3>{{ related.title }}</h3>\n        </a>\n      </div>\n      {% endif %}\n      {% endfor %}\n      {% endif %}\n\n      {% unless has_related %}\n      <p>Ainda não existem artigos relacionados.</p>\n      {% endunless %}\n    </div>\n  </div>\n</div>\n\n<script>\n  function scrollCarousel(direction) {\n    const container = document.getElementById('carouselContainer');\n    const scrollAmount = 260;\n    container.scrollBy({\n      left: direction * scrollAmount,\n      behavior: 'smooth'\n    });\n  }\n\n  document.addEventListener('DOMContentLoaded', function () {\n    const container = document.getElementById('carouselContainer');\n    const buttons = document.querySelectorAll('.carousel-button');\n\n    if (container && container.scrollWidth <= container.clientWidth) {\n      buttons.forEach(button => button.style.display = 'none');\n    }\n  });\n</script>",
